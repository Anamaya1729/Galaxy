

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0.01171875, 0.140625, 0.1484375,.8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
        text: root.parent.menu_title
        pos_hint: {'center_x':0.5 , 'center_y':0.6 }
    Button:
        font_size: dp(30)
        font_name: "fonts/Eurostile.ttf"
        text: root.parent.button_title
        pos_hint: {'center_x': 0.5, 'center_y':0.3 }
        size_hint: .2,.075
        on_press: root.parent.on_game_start_press()
        background_normal: ""
        background_color: 1,.3,.3,.70